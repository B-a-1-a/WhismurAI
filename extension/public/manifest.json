{
  "manifest_version": 3,
  "name": "WhismurAI Live Translator",
  "version": "1.0.0",
  "description": "Real-time browser tab audio translation",
  "permissions": [
    "tabCapture",
    "activeTab",
    "offscreen",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "WhismurAI Translator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}

