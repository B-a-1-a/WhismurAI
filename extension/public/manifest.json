{
  "manifest_version": 3,
  "name": "WhismurAI Live Translator",
  "version": "1.0.0",
  "description": "Real-time browser tab audio translation",
  "permissions": [
    "tabCapture",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "WhismurAI Translator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

